@model lab10_webbb.Models.AddLogViewModel

<h2>Add Log Report</h2>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Type</label>
        <input type="text" class="form-control" asp-for="Type"/>
    </div>

    <div class="mt-3">
		<label class="form-label">Severity</label>
		<input type="text" class="form-control" asp-for="Severity"/>
    </div>

    <div class="mt-3">
		<label class="form-label">Date Created</label>
		<input type="date" class="form-control" asp-for="DateCreated"/>
	</div>

    <div class="mt-3">
		<label class="form-label">Message</label>
		<input type="text" class="form-control" asp-for="Message"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Add Log</button>
    </div>

</form>

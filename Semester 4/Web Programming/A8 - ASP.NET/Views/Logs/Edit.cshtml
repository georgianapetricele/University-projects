@{
}

@model lab10_webbb.Models.Entities.LogReport

<h2>Edit Log Report</h2>

@if (Model == null)
{
    <p>Log Report not found!</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly/>
        </div>

        <div class="mt-3">
            <label class="form-label">User</label>
            <input type="text" class="form-control" asp-for="UserId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Type</label>
            <input type="text" class="form-control" asp-for="Type"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Severity</label>
            <input type="text" class="form-control" asp-for="Severity"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Date Created</label>
            <input type="date" class="form-control" asp-for="DateCreated"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Message</label>
            <input type="text" class="form-control" asp-for="Message"/>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Edit Log</button>

            <button type="submit" class="btn btn-danger ms-3" asp-controller="Logs" asp-action="Delete">Delete</button>
        </div>

        

    </form>
}